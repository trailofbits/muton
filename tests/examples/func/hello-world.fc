() recv_internal(int my_balance, int msg_value, cell in_msg_full, slice in_msg_body) impure {
    ;; if (true) { throw(1); }
    ;; var z = 1 + 2;
    ;; if (1 < 2) { var y = 3; }
    slice cs = in_msg_full.begin_parse();
    cs~skip_bits(4);

    slice sender_address = cs~load_msg_addr();

    ;; Send message
    ;; begin_cell().store_uint(0, 32).end_cell();
    var message = begin_cell()
        .store_uint(0x10, 6) ;; 010000
        .store_slice(sender_address)
        .store_coins(0)
        .store_uint(0, 1 + 4 + 4 + 64 + 32 + 1 + 1)
        .store_uint(0, 32)
        .store_slice("Hello, world!")
        .end_cell();

    send_raw_message(message, 64);

    ;; Update counter
    ;; while (false) { break; }
    var cs = get_data().begin_parse();
    var counter = cs~load_uint(32);

    var new_count = counter + 1;

    ;; count is mod 32
    if (new_count >= 32) {
      new_count = 0;
    }

    ;; skip unlucky number
    ifnot (
      new_count == 13
    ) {
      new_count = 14;
    }

    set_data(
        begin_cell()
            .store_uint(new_count, 32)
            .store_slice(cs)
        .end_cell()
    );
}

() recv_external(slice in_msg) impure {
    throw(0xffff);
}

int counter() method_id {
    var data = get_data().begin_parse();
    return data~load_uint(32);
}

slice owner() method_id {
    var data = get_data().begin_parse();
    data~skip_bits(32);
    return data~load_msg_addr();
}
